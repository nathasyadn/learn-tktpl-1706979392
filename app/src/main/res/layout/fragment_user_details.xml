<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="userData"
            type="id.ac.ui.cs.mobileprogramming.natasyameidiana.helloworld.entity.UserData" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:ignore="RtlHardcoded">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/user_detail_name_margin_top"
                android:layout_marginBottom="0dp"
                android:text="@{userData.name}"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/umur"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="221dp"
                android:layout_height="36dp"
                android:layout_marginLeft="@dimen/user_detail_description_margin_left"
                android:layout_marginTop="0dp"
                android:layout_marginRight="@dimen/user_detail_description_margin_right"
                android:layout_marginBottom="@dimen/user_detail_description_margin_bottom"
                android:autoLink="web"
                android:text="@{userData.email}"
                android:textAlignment="center"
                android:textSize="24sp"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/description"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/user_detail_description_margin_left"
                android:layout_marginTop="0dp"
                android:layout_marginRight="@dimen/user_detail_description_margin_right"
                android:layout_marginBottom="@dimen/user_detail_description_margin_bottom"
                android:autoLink="web"
                android:text="@{userData.description}"
                android:textSize="30sp" />

        </LinearLayout>

    </ScrollView>
</layout>